<%- include('../partials/header.ejs') %>
    <main id="main" class="main">
        <table class="table w-25 m-auto">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Managers</th>
                    <th scope="col">Managers Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% managers && managers.map((manager, i )=>{ %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= manager.name %>
                        </td>
                        <td>
                            <%= manager.email %>
                        </td>
                        <td>
                            <%= manager.show %>
                        </td>
                        <td>
                            <div class="d-flex">
                                <a href="/product/delete/<%= manager._id %>" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('../partials/footer.ejs') %>